.container {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.title {
  height: 500rpx;
  width: 100%;
  background: -webkit-gradient(linear, left top, right top, from(#0175c6), to(#0598e4));
  background: -o-linear-gradient(left, #0175c6, #0598e4);
  background: linear-gradient(to right, #0175c6, #0598e4);
  /* Safari 5.1 - 6.0 */
  position: relative;
}
.title .img-logo {
  width: 100px;
  height: 100px;
  background-color: #eeeeee;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.login-box {
  width: 100%;
  margin-top: 50rpx;
}
.username-wrap {
  padding: 0 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.username-wrap .username {
  height: 60rpx;
  -webkit-box-flex: 2;
  -webkit-flex: 2;
      -ms-flex: 2;
          flex: 2;
  float: right;
  border-bottom: 1px solid #ccc;
  background: #fff;
}
.password-wrap {
  margin-top: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 0 120rpx;
}
.password-wrap .password {
  height: 60rpx;
  -webkit-box-flex: 2;
  -webkit-flex: 2;
      -ms-flex: 2;
          flex: 2;
  float: right;
  border-bottom: 1px solid #ccc;
  background: #fff;
}
.btn {
  margin-top: 50rpx;
  padding: 0 100rpx;
}
.btn button {
  background: #0598e4;
  color: #fff;
}
.popup {
  height: 100%;
}

